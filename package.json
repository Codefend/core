{
    "name": "codefend",
    "version": "3.0.0-alpha.2",
    "description": "Code obfuscator CLI that protects your code regardless of the programming language or framework.",
    "keywords": [
        "obfuscator",
        "uglifier",
        "encrypt",
        "angular",
        "vue",
        "react",
        "svelte",
        "typescript",
        "css",
        "html",
        "python",
        "c#",
        "c++",
        "obfuscate",
        "uglify",
        "obfuscation",
        "uglification"
    ],
    "author": "Mounzer Adas",
    "homepage": "https://github.com/Codefend/core.git",
    "bugs": {
        "url": "https://github.com/Codefend/core/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Codefend/core.git"
    },
    "license": "MIT",
    "exports": {
        ".": {
            "types": "./build/index.d.ts",
            "import": "./build/index.mjs",
            "require": "./build/index.cjs"
        }
    },
    "main": "./build/index.mjs",
    "module": "./build/index.mjs",
    "types": "./build/index.d.ts",
    "files": [
        "build",
        "bin/**"
    ],
    "type": "module",
    "bin": {
        "codefend": "./bin/index.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "unbuild",
        "dev": "unbuild --stub",
        "build:main": "tsx ./scripts/build.ts",
        "clean": "rimraf build coverage nyc_output",
        "type:dts": "tsc --emitDeclarationOnly --project tsconfig.build.json",
        "type:check": "tsc --noEmit",
        "format": "prettier \"src/**/*.ts\" --write",
        "format:check": "prettier \"src/**/*.ts\" --check",
        "lint": "eslint src --ext .ts --fix",
        "lint:check": "eslint src --ext .ts",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage",
        "spell:check": "cspell \"{README.md,CODE_OF_CONDUCT.md,CONTRIBUTING.md,.github/*.md,src/**/*.ts}\"",
        "cz": "cz",
        "semantic-release": "semantic-release --release-as $npm_package_version"
    },
    "devDependencies": {
        "@ryansonshine/commitizen": "^4.2.8",
        "@ryansonshine/cz-conventional-changelog": "^3.3.4",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "^10.0.1",
        "@semantic-release/github": "^9.0.4",
        "@semantic-release/npm": "^10.0.4",
        "@semantic-release/release-notes-generator": "^11.0.4",
        "@types/node": "^20.11.6",
        "@types/prompts": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^6.1.0",
        "@typescript-eslint/parser": "^6.1.0",
        "cspell": "^6.31.2",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "globby": "^13.2.2",
        "nyc": "^15.1.0",
        "prettier": "^3.0.0",
        "rimraf": "^5.0.1",
        "semantic-release": "^21.0.7",
        "source-map-support": "^0.5.21",
        "tsx": "^3.12.7",
        "typescript": "^5.1.6",
        "unbuild": "^2.0.0",
        "vitest": "^0.33.0"
    }
}
